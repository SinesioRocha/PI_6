<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".telas.AvaliacaoLesaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:onClick="voltarTela"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Avaliação Do Paciente"
            android:textColor="@color/azulEscuro"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="327dp"
            android:layout_height="77dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:text="Selecione o grau da lesão abaixo mais compatível com a do paciente:"
            android:textAlignment="center"
            android:textColor="@color/azulEscuro"
            android:textSize="20sp" />

        <!-- Container Branco com elementos -->
        <!--Estagio 1-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerEstagio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/container_borda"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"
            android:onClick="Estagio1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Lesão por pressão Estágio 1"
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="265dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/img1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="327dp"
                android:layout_height="77dp"
                android:text="Pele íntegra com eritema não branqueável, após a remoção de pressão, ou com alterações na sensação, temperatura ou consistência.:"
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Container Branco com elementos -->
        <!--Estagio 2-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerEstagio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/container_borda"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"
            android:onClick="Estagio2">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Lesão por pressão Estágio 2"
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="265dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@drawable/img2" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="327dp"
                android:layout_height="77dp"
                android:text="Perda parcial da espessura da pele com exposição da derme. Leito da lesão é viável, rosa ou vermelho, úmida e pode se apresentar como uma flictena com exsudato seroso intacto ou rompido."
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Container Branco com elementos -->
        <!--Estagio 3-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerEstagio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/container_borda"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"
            android:onClick="Estagio3">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Lesão por pressão Estágio 3"
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="265dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/img3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="327dp"
                android:layout_height="77dp"
                android:text="Perda da espessura total da pele com exposição de tecido adiposo. O tecido de granulação e a borda despregada estão frequentemente presentes. Esfacelos podem ser visíveis."
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Container Branco com elementos -->
        <!--Estagio 3-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerEstagio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/container_borda"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"
            android:onClick="Estagio4">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Lesão por pressão Estágio 4"
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="265dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:srcCompat="@drawable/img4" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="327dp"
                android:layout_height="77dp"
                android:text="Perda da espessura total da pele e perda tissular. Possível comprometimento de fáscia, músculos, ossos, tendões e/ou nervos. Esfacelos podem ser visíveis. Bordas despregadas, descolamentos e/ou tunelização ocorrem frequentemente."
                android:textAlignment="center"
                android:textColor="@color/azulEscuro"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</ScrollView>